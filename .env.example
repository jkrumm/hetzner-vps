# --- Domain + ACME ---
DOMAIN=<your-domain>                        # e.g. example.com (wildcard cert covers *.example.com)
ACME_EMAIL=<your-email>                     # Let's Encrypt notifications email

# --- Cloudflare (DNS-01 ACME) ---
CF_DNS_API_TOKEN=<see-doppler>              # Cloudflare API token with Zone:DNS:Edit permission

# --- PostgreSQL ---
POSTGRES_DB=<see-doppler>
POSTGRES_USER=<see-doppler>
POSTGRES_PASSWORD=<see-doppler>

# --- Traefik Dashboard (optional, restricted to Tailscale) ---
TRAEFIK_DASHBOARD_USER=<see-doppler>        # htpasswd format: user:bcrypt-hash
TRAEFIK_DASHBOARD_PASSWORD=<see-doppler>

# --- CrowdSec ---
CROWDSEC_BOUNCER_KEY=<see-doppler>          # Generated after: cscli bouncers add traefik-bouncer

# --- Backup ---
AWS_ACCESS_KEY_ID=<see-doppler>             # Object storage access key
AWS_SECRET_ACCESS_KEY=<see-doppler>         # Object storage secret key
AWS_S3_BUCKET=<see-doppler>                 # Bucket name
AWS_S3_ENDPOINT=<see-doppler>               # e.g. https://fsn1.your-objectstorage.com
UPTIME_KUMA_PUSH_URL=<see-doppler>          # Push monitor URL from Uptime Kuma

# --- WUD (What's Up Docker) Notifications ---
# Note: WUD requires an instance index (_1_) in env var names
WUD_TRIGGER_PUSHOVER_TOKEN=<see-doppler>    # Pushover application token (used as WUD_TRIGGER_PUSHOVER_1_TOKEN)
WUD_TRIGGER_PUSHOVER_USER=<see-doppler>     # Pushover user key (used as WUD_TRIGGER_PUSHOVER_1_USER)

# --- Beszel Agent ---
BESZEL_AGENT_KEY=<see-doppler>              # SSH key from Beszel hub (Settings > Add System)

# --- Dozzle ---
DOZZLE_REMOTE_HOST=<see-doppler>            # Format: tcp://<tailscale-hub-ip>:7007|hub

# --- OTel Collector (SigNoz on homelab via Tailscale) ---
SIGNOZ_OTLP_ENDPOINT=<see-doppler>          # Format: <tailscale-ip>:4317
